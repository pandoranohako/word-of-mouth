.user-main_box
  .user-main_box_contents
    LOG IN
  .user-main_box_contents_title
  = form_with(model: @user,url: user_session_path, id: 'new_user', class: 'new_user', local: true) do |f|
    .user-main_box_contents_field
      = f.label :email 
      = f.email_field :email, autofocus: true
    .user-main_box_contents_field
      = f.label :password
      = f.password_field :password, autocomplete: "current-password" 

    - if devise_mapping.rememberable?
      .user-main_box_contents_field
        = f.label :remember_me
        = f.check_box :remember_me

      .user-main_box_contents_action
        = f.submit "Log in", class: "login-btn"

= render "devise/shared/links" 
